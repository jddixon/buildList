#!/usr/bin/env bash

if [ ! -z "${DEV_BASE// }" ]
then
  cd $DEV_BASE/py/buildlist
  
  rm -rf build/* 
  
  pySloc -L py  -X cover -X htmlcov -X dist -v $@ src/buildlist src/bl_check src/bl_createtestdata1 src/bl_listgen src/bl_srcgen tox.ini requirements.txt test_requirements.txt tests/test_buildlist.py tests/test_listgen.py tests/test_populate_data_dir.py tests/test_random_dir.py tests/test_timestamp.py setup.py
else
  echo "DEV_BASE is not defined"
fi
